<Window
    x:Class="NiueryToolKit.View.FileHash.FileHash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:NiueryToolKit.Extension.Behavior"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NiueryToolKit.View.FileHash"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NiueryToolKit.ViewModel.FileHash;assembly=NiueryToolKit.ViewModel"
    Title="FileHash"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:FileHashViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <Border
            Margin="20,10,20,0"
            BorderBrush="#e0e0e0"
            BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="20,0,20,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="路径" />
                <TextBox
                    Grid.Column="1"
                    Width="430"
                    Margin="20,5,20,5"
                    behaviors:DragDropPathBehavior.IsEnabled="true"
                    Text="{Binding Path, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Button
                    Width="80"
                    Margin="20,5,20,5"
                    HorizontalAlignment="Left"
                    Command="{Binding OpenFileCommand}"
                    Content="选择文件" />
                <Button
                    Width="80"
                    Margin="0,5,20,5"
                    HorizontalAlignment="Left"
                    Command="{Binding OpenFolderCommand}"
                    Content="选择文件夹" />
            </StackPanel>
        </Border>


        <GroupBox
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="20,10,20,10"
            Header="结果">
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding HashDates}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding FilePath}"
                        Header="文件" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MD5}"
                        Header="MD5" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SHA1}"
                        Header="SHA1" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SHA256}"
                        Header="SHA256" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</Window>
